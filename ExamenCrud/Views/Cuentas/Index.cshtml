                <a asp-action="Details" asp-route-id="@item.NumCuenta">Details</a> |
                @if (item.Estado == 1)
                {
                    <a asp-action="Desactivar" asp-route-id="@item.NumCuenta">Desactivar</a>
                }
                else
                {
                    <a asp-action="Activar" asp-route-id="@item.NumCuenta">Activar</a>
