@model List<DatosVehiculo.ViewModel.ViewModelTipoVehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DescripcionVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DescripcionVehiculo)
            </td>
            <td>
                @if (item.Estado == 1)
                {
                    <label>Activo</label>
                }
                else
                {
                    <label>Inactivo</label>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codigo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Codigo">Detalles</a> |
                @if (item.Estado == 1)
                {
                    <a asp-action="Desactivar" asp-route-id="@item.Codigo">Desactivar</a>
                }
                else
                {
                    <a asp-action="Activar" asp-route-id="@item.Codigo">Activar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
